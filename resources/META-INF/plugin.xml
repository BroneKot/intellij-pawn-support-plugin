<idea-plugin version="2">
    <id>com.your.company.unique.plugin.id</id>
    <name>SourcePawn Language Support</name>
    <version>1.0</version>
    <vendor email="collinsmith70@gmail.com"
            url="https://alliedmods.net/">AlliedModders</vendor>
    <depends>com.intellij.modules.lang</depends>
    <depends optional="true" config-file="extended_platform.xml">com.intellij.modules.java</depends>

    <description><![CDATA[
      Adds support for the AMXX Pawn and SourcePawn scripting languages.
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileTypeFactory implementation="net.sourcemod.sourcepawn.SpFileTypeFactory"/>
        <lang.parserDefinition language="SourcePawn"
                               implementationClass="net.sourcemod.sourcepawn.parser.SpParserDefinition"/>
        <lang.braceMatcher language="SourcePawn"
                           implementationClass="net.sourcemod.sourcepawn.editor.SpBraceMatcher"/>
        <quoteHandler fileType="SourcePawn" className="net.sourcemod.sourcepawn.editor.SpQuoteHandler"/>
        <projectConfigurable provider="net.sourcemod.sourcepawn.pages.SpConfigurationProvider"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>net.sourcemod.sourcepawn.SpSettings</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>net.sourcemod.sourcepawn.SpSupport</implementation-class>
        </component>
    </project-components>

    <actions>
        <!-- Add your actions here -->
    </actions>

</idea-plugin>